{{#unless canvas.isTemplate}}
  <a href="#" local-class="template-badge">Use Template</a>
{{/unless}}

<div local-class="actions">
  <div local-class="trigger" onclick={{action 'toggleMenu'}}>
    {{svg-jar "More" height="24" width="24"}}
  </div>

  {{#if menuIsShowing}}
    <div local-class="menu">
      <div local-class="menu-content">
        <div local-class="menu-item">Download</div>
        <div local-class="menu-item">Delete</div>
      </div>
    </div>
  {{/if}}
</div>
