<div local-class="container">
  {{svg-jar pulse.icon height=24 width=24 local-class='icon'}}

  <div local-class="main">
    <div class="summary" local-class="summary" data-test-summary>
      {{#if pulse.actor }}
        {{#if pulse.actor.link}}
          <a href="{{pulse.actor.link}}">{{pulse.actor.name}}</a>
        {{else}}
          <strong>{{pulse.actor.name}}</strong>
        {{/if}}
      {{/if}}

      {{pulse.action}}{{#if pulse.provider}} on <a href="{{pulse.provider.link}}">{{pulse.provider.name}}</a>{{/if}}.
    </div>

    {{#if pulse.attachment}}
      <div local-class="attachment"></div>
    {{/if}}
  </div>
</div>
