{{#if isEditingChannels}}
  {{#power-select-multiple
    options=channels
    selected=selectedChannels
    placeholder="Add channels..."
    onchange=(action (mut selectedChannels))
    as |channel|}}
    {{channel.name}}
  {{/power-select-multiple}}

  <button onclick={{action 'persistChannels'}}>Done</button>
{{else}}
  <div local-class="one-liner">
    {{svg-jar 'slack-mark' height='16' width='16' local-class='icon'}}
    {{channelList}}
    <button onclick={{action (toggle 'isEditingChannels' this)}}>Edit</button>
  </div>
{{/if}}
