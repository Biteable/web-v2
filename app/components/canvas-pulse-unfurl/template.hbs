<div local-class="main">
  <div local-class="main-content">
    <div local-class="header">
      {{svg-jar 'Document' height='24' width='24' local-class='provider-icon'}}

      {{#if canvasId}}
        {{#link-to 'team.canvas.show' canvasId local-class='title' data-test-title='true'}}
          {{unfurled.title}}
        {{/link-to}}
      {{else}}
        <a href="{{unfurled.url}}" local-class="title" data-test-title>{{unfurled.title}}</a>
      {{/if}}
    </div>

    {{#if unfurled.text}}
      <div local-class="text" data-test-text>{{unfurled.text}}</div>
    {{/if}}
  </div>

  {{#if hasProgress}}
    <div local-class="progress">
      {{ui-progress-donut progress=progress}}
    </div>
  {{/if}}
</div>
