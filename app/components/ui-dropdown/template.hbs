<div local-class="trigger">
  {{#if (hasBlock 'inverse')}}
    <button local-class="yield-button" onclick={{action 'toggleOpen'}}>
      {{yield to='inverse'}}
    </button>
  {{else}}
    <button onclick={{action 'toggleOpen'}}>{{label}}</button>
  {{/if}}
</div>

{{#if isOpen}}
  <div local-class="main">
    <div local-class="main-content">
      {{yield}}
    </div>
  </div>

  <div onclick={{action 'toggleOpen'}} local-class="backdrop"></div>
{{/if}}
